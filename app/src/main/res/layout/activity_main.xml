<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/background_v2"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appBarLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryTM">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="43dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_vertical"

                            android:scaleType="fitCenter"
                            android:src="@drawable/mini_logo" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:fontFamily="@font/days_one"
                            android:paddingStart="8dp"
                            android:text="@string/time_met"
                            android:textColor="@android:color/white"
                            android:textSize="24sp" />

                        <FrameLayout
                            android:id="@+id/containerValutes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">

                        </FrameLayout>
                    </LinearLayout>
                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.AppBarLayout>

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/hot_crop_3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:scrollbars="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="25dp"
                                android:background="@color/backgroundPrimaryTM"
                                android:fontFamily="@font/days_one"
                                android:gravity="center"
                                android:padding="8dp"
                                android:text="Тайммет —  железное решение для отходов и снабжения"
                                android:textColor="@android:color/white"
                                android:textSize="23sp" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="0dp"
                                android:layout_marginEnd="25dp"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="25dp"
                                android:background="@color/backgroundPrimaryTM"
                                android:fontFamily="@font/days_one"
                                android:gravity="center"
                                android:paddingEnd="8dp"
                                android:paddingStart="8dp"
                                android:paddingTop="8dp"
                                android:text="Сдайте отходы металла на металлургический завод."
                                android:textColor="@android:color/white"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="0dp"
                                android:layout_marginEnd="25dp"
                                android:layout_marginStart="25dp"
                                android:background="@color/backgroundPrimaryTM"
                                android:fontFamily="@font/days_one"
                                android:gravity="center"
                                android:paddingBottom="8dp"
                                android:paddingEnd="8dp"
                                android:paddingStart="8dp"
                                android:text="Выгодно, быстро, честно."
                                android:textColor="@android:color/white"
                                android:textSize="22sp" />

                            <Button
                                android:id="@+id/buttonSell"
                                style="@style/ButtonStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="25dp"
                                android:elevation="8dp"
                                android:fontFamily="@font/days_one"
                                android:text="Продать металл"
                                android:translationZ="6dp" />

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="0dp"
                                android:layout_marginEnd="25dp"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="25dp"
                                android:background="@color/backgroundPrimaryTM"
                                android:fontFamily="@font/days_one"
                                android:gravity="center"
                                android:paddingEnd="8dp"
                                android:paddingStart="8dp"
                                android:paddingTop="8dp"
                                android:text="Расчитайте прибыль от продажи -"
                                android:textColor="@android:color/white"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="0dp"
                                android:layout_marginEnd="25dp"
                                android:layout_marginStart="25dp"
                                android:background="@color/backgroundPrimaryTM"
                                android:fontFamily="@font/days_one"
                                android:gravity="center"
                                android:paddingBottom="8dp"
                                android:paddingEnd="8dp"
                                android:paddingStart="8dp"
                                android:text="В ОДИН КЛИК"
                                android:textColor="@android:color/white"
                                android:textSize="22sp" />

                            <Button
                                android:id="@+id/buttonCalculate"
                                style="@style/ButtonStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="25dp"
                                android:elevation="8dp"
                                android:fontFamily="@font/days_one"
                                android:text="Калькулятор прибыли"
                                android:translationZ="6dp" />

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="0dp"
                                android:layout_marginEnd="25dp"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="25dp"
                                android:background="@color/backgroundPrimaryTM"
                                android:fontFamily="@font/days_one"
                                android:gravity="center"
                                android:padding="8dp"
                                android:text="Узнайте самую актуальную информацию о ценах на рынке"
                                android:textColor="@android:color/white"
                                android:textSize="18sp" />

                            <Button
                                android:id="@+id/buttonPricelist"
                                style="@style/ButtonStyle"
                                android:layout_width="152dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="25dp"
                                android:elevation="8dp"
                                android:fontFamily="@font/days_one"
                                android:text="Цены"
                                android:translationZ="6dp" />

                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </LinearLayout>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabCall"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            android:tint="@android:color/transparent"
            app:backgroundTint="@color/fab_color"
            android:elevation="6dp"
            android:translationZ="4dp"
            app:fabSize="normal"
            app:rippleColor="@color/colorAccentTM"
            app:srcCompat="@drawable/ic_phone_in_talk_black_56dp" />
    </FrameLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="330dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/backgroundTM"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_menu_header"
        app:menu="@menu/navigation_menu" />

</android.support.v4.widget.DrawerLayout>