<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_gravity="center_horizontal">
        <CheckBox
            android:id="@+id/cb_a_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Лом черных металлов 3А"
            android:fontFamily="@font/days_one"
            android:layout_marginBottom="4dp"/>
        <CheckBox
            android:id="@+id/cb_a_3gd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Лом черных металлов 3АЖД"
            android:fontFamily="@font/days_one"
            android:layout_marginBottom="4dp"/>
        <CheckBox
            android:id="@+id/cb_a_32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Лом черных металлов 3А2"
            android:fontFamily="@font/days_one"
            android:layout_marginBottom="4dp"/>
        <CheckBox
            android:id="@+id/cb_a_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Лом черных металлов 5А"
            android:fontFamily="@font/days_one"
            android:layout_marginBottom="4dp"/>
        <CheckBox
            android:id="@+id/cb_a_5m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Лом 5АМ"
            android:fontFamily="@font/days_one"
            android:layout_marginBottom="4dp"/>
        <CheckBox
            android:id="@+id/cb_a_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Лом черных металлов 12А"
            android:fontFamily="@font/days_one"
            android:layout_marginBottom="4dp"/>
        <CheckBox
            android:id="@+id/cb_a_121"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Автомобильный лом 12А1"
            android:fontFamily="@font/days_one"
            android:layout_marginBottom="4dp"/>
        <CheckBox
            android:id="@+id/cb_a_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Лом черных металлов 16А"
            android:fontFamily="@font/days_one"
            android:layout_marginBottom="4dp"/>
        <CheckBox
            android:id="@+id/cb_a_17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Лом черных металлов 17А"
            android:fontFamily="@font/days_one"
            android:layout_marginBottom="4dp"/>
        <CheckBox
            android:id="@+id/cb_a_19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Лом черных металлов 19А"
            android:fontFamily="@font/days_one"
            android:layout_marginBottom="4dp"/>
        <CheckBox
            android:id="@+id/cb_a_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Лом черных металлов 20А"
            android:fontFamily="@font/days_one"/>
        <Button
            android:id="@+id/buttonCategoryForSellOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:text="OK"
            style="@style/ButtonStyle"
            android:fontFamily="@font/days_one"/>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>